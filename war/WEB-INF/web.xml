<?xml version="1.0" encoding="utf-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xmlns="http://java.sun.com/xml/ns/javaee"
xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">
	<servlet>
		<servlet-name>CronTask</servlet-name>
		<servlet-class>weibotrends.CronServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>Task</servlet-name>
		<servlet-class>weibotrends.TaskServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>WeiboTops</servlet-name>
		<servlet-class>weibotrends.WeiboTopsServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>WeiboTops</servlet-name>
		<url-pattern>/weibotops</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>CronTask</servlet-name>
		<url-pattern>/cron</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>Task</servlet-name>
		<url-pattern>/task</url-pattern>
	</servlet-mapping>
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
	</welcome-file-list>
</web-app>
